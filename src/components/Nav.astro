---
const { currentPath } = Astro.props;
---

<nav>
    <a href="/" class={currentPath === "/" ? "active" : ""}>About</a>
    <a href="/writing" class={currentPath === "/writing" ? "active" : ""}
        >Writing</a
    >
    <a href="/subscribe" class={currentPath === "/subscribe" ? "active" : ""}
        >Subscribe</a
    >
</nav>

<style>
    nav {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }
    nav a {
        color: #333;
        text-decoration: none;
        margin-right: 1.5rem;
    }
    nav a:hover {
        color: #0066cc;
    }
    nav a.active {
        font-weight: 600;
    }
</style>
