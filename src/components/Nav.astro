---
const { currentPath } = Astro.props;
---

<nav>
    <a href="/" class={currentPath === "/" ? "active" : ""}>About</a>
    <a href="/posts" class={currentPath === "/posts" ? "active" : ""}>Posts</a>
</nav>

<style>
    nav {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }
    nav a {
        color: #333;
        text-decoration: none;
        margin-right: 1.5rem;
    }
    nav a:hover {
        color: #0066cc;
    }
    nav a.active {
        font-weight: 600;
    }
</style>
